<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="181dp"
    android:layout_height="181dp"
    android:backgroundTint="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/chatIconPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp" />

    <TextView
        android:id="@+id/chatTitlePreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/bold_cyrillic"
        android:maxLines="1"
        android:maxLength="20"
        android:ellipsize="end" />
    <RelativeLayout
        android:id="@+id/chatMembersInfoRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="3dp">
        <ImageView
            android:id="@+id/chatMembersIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/people_icon" />

        <TextView
            android:id="@+id/chatMembersCountPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/chatMembersIcon"
            android:layout_centerVertical="true"
            android:textSize="12sp" />
    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>